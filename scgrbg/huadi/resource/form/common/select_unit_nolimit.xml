<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE Forms SYSTEM "../../form_definition.dtd"><Forms>	<form id="select_unit_nolimit" desp="单位树选择">		<import language="css" file="pt/res/css/newcss.css"></import>		<widgets>			<layout name="position1" type="BandLayout" 				attr="groupSize:1;valign:top;align:center;" >			<layout type="BandLayout" name="titleLayout" width="98%"				leftSpace="10px"   attr="groupSize:2;" topSpace="5px">             <basic name="tp" widget="Label" width="15px" height="20px"						backgroundImg="pt/img/imgs.png" />				<basic name="ddddd" label="选择单位" widget="Label"  attr="width:150px" leftSpace="-70px" />			</layout>				isnull是否支持不选择单位			<basic name="isnull" widget="Hidden" default="false"></basic>			<basic name="ismulti" widget="Hidden" default="0"></basic>			<basic name="reloadId" widget="Hidden" default="-1"></basic>			<basic name="hidcode" widget="Hidden"></basic>			<basic name="hidname" widget="Hidden"></basic>				   <layout type="BandLayout" leftSpace="15px" topSpace="5px">				<basic name="tree1" widget="Xtree" width="350px" height="400"					attr="check:true;relateSelect:false;foldclick:true" referWidgets="reloadId">					<valueFetcher						type="com.aisino.platform.view.basicWidget.fetcher.XTreeFetcher">						<value name="object">cn.com.huadi.aos.hdoa.unit.plugin.UnitTreeNolimitPlugin</value>					</valueFetcher>				</basic>			</layout>			<layout type="BandLayout" name="buttonBandLayout3" attr="align:center;"				width="100%" desp="操作按钮列表" topSpace="15px">				<basic name="save" label="确定" class="gradual-btnitem"					width="60px" widget="OButton" height="27px" />				<basic name="closeBTN" label="关闭" class="gradual-btnitem"					leftSpace="30px" width="60px" widget="OButton" height="27px" />			</layout>			</layout>				</widgets>		<extendPoint>			<plugin type="cn.com.huadi.aos.hdoa.unit.plugin.UnitPlugin"				submitEvent="loaduser"></plugin>		</extendPoint>		<bind element="this" event="onCreate" extendway="after"><![CDATA[			  var ids=PT.getValue('hidcode');			  var arr=new Array(); 			  arr=ids.split(",");			  if(arr.length>0){				  for(var i=0;i<arr.length;i++){				  	w('tree1').doCheck(arr[i],'2');				  	w('tree1').expandSingleNode(arr[i]);				  }			  }           ]]></bind>				<bind element="tree1" event="doclick" param="id,data,level,isLeaf,parentId"><![CDATA[			/*右边已选人员不在待选显示*/				var ids =w('rightBox').getAllItem();				PT.s('loaduser','','deptid='+id+'&selecteduser='+ids);			]]>		</bind>		<bind element="save" event="click"> <![CDATA[			var tree1 = w('tree1');				var list = tree1.getCheckData(true);				var id='';				var name='';				var ismulti=wg('ismulti');/*是否支持多选，0否 1是*/				var isnull=wg('isnull');/*是否可以不选择单位保存*/				for(var i=0;i<list.length;i++){					if(i!=list.length-1){							id+=list[i]['code']+',';							name+=list[i]['name']+',';					}else{							id+=list[i]['code']+'';							name+=list[i]['name'];					}				}				if(id==''&&isnull=='false'){				 	alert('请选择单位！');				}else if(id!=''){					if(ismulti==0&&id.indexOf(',')!=-1){						alert('只能选择一个单位！');						return;					}				}							PT.closeModal({'code':id,'name':name});           ]]></bind>				关闭本页面		<bind element="closeBTN" event="click"><![CDATA[		 	PT.closeModal();		]]></bind>	</form></Forms>